#include<iostream> 
#include<stdio.h>
#include<string.h>
#include<sstream>
using namespace std; 
void BubbleSort(int);
void swap(int*,int*);
int a[100]={0};
int main()
{
    int n,i;
    printf("Enter the array size(max 100):");
    scanf("%d",&n);
    printf("Enter array elements:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
   BubbleSort(n);
    printf("Sorted Array:");
    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }
    return 0;
}
void BubbleSort(int n)
{
    int i,j; char s1[20],s2[20],s3[20];
     for(i=n-1;i>0;i--)
     {
         for(j=0;j<i;j++)
         {   
              strcpy(s1,to_string(a[j]).c_str());
              strcpy(s2,to_string(a[j+1]).c_str());
              strcpy(s3,s1); 
              int i1 = atoi(strcat(s3,s2)); 
              int i2=atoi(strcat(s2,s1));
             
              if(i2>i1)
              {
                 swap(&a[j],&a[j+1]);
              }
         }
     }
}
void swap(int *i,int *j)
{
    int temp;
    temp=*i;
    *i=*j;
    *j=temp;
}
